<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <repositories>
    <repository>
      <id>ApacheSnapshot</id>
      <name>Apache Repository</name>
      <url>https://repository.apache.org/content/groups/snapshots/</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
    </repositories>


  <parent>
    <groupId>com.openhtmltopdf</groupId>
    <artifactId>openhtmltopdf-parent</artifactId>
    <version>0.0.1-RC10-rototor1</version>
  </parent>

  <artifactId>openhtmltopdf-pdfbox</artifactId>

  <packaging>jar</packaging>

  <name>Openhtmltopdf PDF Rendering (Apache PDF-BOX 2)</name>
  <description>Openhtmltopdf is a CSS 2.1 renderer written in Java. This artifact supports PDF output with Apache PDF-BOX 2.</description>

  <licenses>
    <license>
      <name>GNU Lesser General Public License (LGPL), version 2.1 or later</name>
      <url>http://www.gnu.org/licenses/lgpl.html</url>
    </license>
  </licenses>
	<distributionManagement>
		<repository>
			<id>repo-deploy</id>
			<url>http://ems:emsems@10.50.3.5:8081/artifactory/ext-release-local</url>
		</repository>
		<snapshotRepository>
			<id>repo-deploy-snapshot</id>
			<url>http://ems:emsems@10.50.3.5:8081/artifactory/ext-snapshot-local</url>
		</snapshotRepository>
	</distributionManagement>
  <dependencies>
    <dependency>
    	<groupId>org.apache.pdfbox</groupId>
    	<artifactId>pdfbox</artifactId>
    	<version>2.0.4</version>
    </dependency>
    <dependency>
      <groupId>com.openhtmltopdf</groupId>
      <artifactId>openhtmltopdf-core</artifactId>
      <version>${project.version}</version>
    </dependency>
	  <dependency>
		  <groupId>de.rototor.pdfbox</groupId>
		  <artifactId>graphics2d</artifactId>
		  <version>0.2</version>
	  </dependency>
  </dependencies>

  <build>
	  <resources>
	    <resource>
	      <directory>../</directory>
	      <targetPath>${project.build.outputDirectory}/META-INF</targetPath>
	      <includes>
	        <include>LICENSE*</include>
	      </includes>
	    </resource>
	  </resources>
  </build>
</project>
